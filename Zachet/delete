#include <stdlib.h>
#include <stdio.h>

typedef struct tree tree;

struct tree {

    int data;
    int sons_count;
    tree **sons;
};

void create_tree(tree **t, int data)
{
    (*t) = malloc(sizeof(tree));
    (*t)->data = data;
    (*t)->sons_count = 0;
    (*t)->sons = malloc(sizeof(tree*) * 100);

    for (int i = 0; i < 100; ++i)
    {
        (*t)->sons[i] = NULL;
    }
}

